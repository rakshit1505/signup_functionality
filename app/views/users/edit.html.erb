<div class="container">
  <div class="card bg-light">
    <article class="card-body mx-auto" style="max-width: 400px;">
      <h4 class="card-title mt-3 text-center">Add More Information</h4>
      <%= form_for @user, url: user_path(@user), html: {method: :put} do |f| %>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
          </div>
          <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Username" %>
        </div> 
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
          </div>
          <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name" %>
        </div> 
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
          </div>
          <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
        </div> 
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
          </div>
          <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone number" %>
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
          </div>
          <%= f.text_field :age, class: "form-control", placeholder: "Age" %>
        </div> 
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
          </div>
          <%= select_tag "gender", options_for_select([["Select Gender", ""], "Male", "Female"], @user.gender&.capitalize),{:class => "form-control"} %>
        </div> 
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-home"></i> </span>
          </div>
          <%= f.text_field :address, class: "form-control", placeholder: "Address" %>
        </div> 
                                            
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
        </div>       
        
      <%end%>
    </article>
  </div>
</div>

